class Account:

    def __init__(self, name, balance):
        self._name = name
        self.__balance = balance
        self._transaction_list = [balance]
        print("Account created for " + self._name)
        self.show_balance()

    def deposit(self, amount):
        if amount > 0:
            self.__balance += amount
            self.show_balance()
            self._transaction_list.append(amount)

    def withdraw(self, amount):
        if 0 < amount <= self.__balance:
            self.__balance -= amount
            self._transaction_list.append(-amount)
        else:
            print("The amount must be greater than zero and no more than your account balance.")
            self.show_balance()

    def show_balance(self):
        print("Balance is {0}".format(self.__balance))

    def show_transactions(self):
        for amount in self._transaction_list:
            if amount > 0:
                tran_type = "deposited"
            else:
                tran_type = "withdrawn"
                amount *= -1
            print("{0:6} {1}".format(amount, tran_type))


if __name__ == '__main__':
    carl = Account("Carl", 0)
    carl.show_balance()

    carl.deposit(1000)
    carl.show_balance()
    carl.withdraw(500)
    carl.show_balance()

    carl.withdraw(2000)

    carl.show_transactions()

    print()

    john = Account("John", 800)
    john.__balance = 200
    john.deposit(100)
    john.withdraw(200)
    john.show_transactions()
    john.show_balance()

    john._Account__balance = 40
    john.show_balance()
